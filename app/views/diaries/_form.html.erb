<%= form_with(model:@diary, local: true, url: choose_new_or_edit )do|form| %>
  <% if @diary.errors.any? %>
    <div id="error_explanation">
      <h2 class="alert alert-danger"><%= @diary.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @diary.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="diary_title">
    <%= form.label :content %>
    <br>
    <%= form.text_field :content %>
    <%= form.submit %>
  </div>
<% end %>
<br>
<%= link_to 'トップへ戻る',diaries_path, class: "btn btn-primary btn-lg"%>
